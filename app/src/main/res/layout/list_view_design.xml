<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/pizza_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/family_pizza" />
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizza_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/noot"
            android:text="PizzaName" />

        <TextView
            android:id="@+id/pizza_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="pizza content"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:fontFamily="@font/noot"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layout_List"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/amount_spinner"
            android:layout_width="80dp"
            android:layout_height="50dp"

            />

        <TextView
            android:id="@+id/pizza_price"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="pizza price"
            android:fontFamily="@font/noot"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>